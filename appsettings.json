{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=saas_template.db",
    "Redis": "localhost:6379"
  },
  "AppSettings": {
    "ApplicationName": "SaaS Template",
    "MaxRetryAttempts": 3,
    "RequestTimeoutSeconds": 30,
    "CacheExpirationMinutes": 5,
    "EnableSwagger": true
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowMinutes": 1
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
